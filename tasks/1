---
- name: install packages
  win_chocolatey:
   name: "{{ package_name }}"
   params: "{{ parameters }}"
   state: present
- name: enabling the service
  win_service:
   name: "{{ service_name }}"
   state: started
- name: add firewall rule
  win_firewall_rule:
   name: "{{ service_name }}"
   localport: "{{ local_port }}"
   protocol: "{{ protocol_name }}"
   direction: in
   state: present
   enabled: yes
